@page "/SimpleCoding/{PageParam1:int}"

@if (PageParam1 == 0)
{
}
else
{
    <Header/>
}

<h3>SimpleCoding</h3>

@OutputText
<div>
    @if (PageParam1 == 0)
    {
    }
    else
    {    
        <div>
         <a href="/Tilmeld/@TilmeldType" @onclick="FromSimple">Tilmeld</a>
        </div>
    }
</div>

@code {
    [Parameter] public int PageParam1 { get; set; }
    public string? TilmeldType { get; set; }

    public string? OutputText { get; set; }

    protected override void OnParametersSet()
    {
        if (PageParam1 == 0)
        {
            OutputText = "Kort tekst om Simple coding";

        }
        else
        {
            OutputText = "Simple coding is a way of writing code that allows you to use variables, loops, functions, and other programming elements. This type of coding is easy to understand and can be used to create many different types of programs.";
        }

        base.OnParametersSet();
    }

    private void FromSimple()
    {
        TilmeldType = "Grundlæggende";

    }

}
